          <form class="form-horizontal" action="" method="post">
          <fieldset>
            <legend class="text-center" style="color:grey;">POST YOUR AD</legend>
    
            <!-- Name input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="name">Name</label>
              <div class="col-md-9">
                <input id="name" name="name" type="text" placeholder="Your name" class="form-control">
                <br>
              </div>
            </div>

             <div class="form-group">
              <label class="col-md-3 control-label" for="name">Title*</label>
              <div class="col-md-9">
                <input id="name" name="title" type="text" placeholder="Title" class="form-control">
                <br>
              </div>
            </div>

             <div class="form-group">
              <label class="col-md-3 control-label" for="name">Description*</label>
              <div class="col-md-9">
                <input id="description" name="description" type="text" placeholder="Description" class="form-control">
                <br>
              </div>
            </div>
          
           <div class="form-group">
              <label class="col-md-3 control-label" for="name">Price*</label>
              <div class="col-md-9">
                <input id="price" name="price" type="number" placeholder="price" class="form-control">
                <br>
              </div>
            </div>

              <div class="form-group">
              <label class="col-md-3 control-label" for="name">Phone Number*</label>
              <div class="col-md-9">
                <input id="phone" name="number" type="number" placeholder="phone" class="form-control">
                <br>
              </div>
            </div>

            
           

             <div class="form-group">
              <label class="col-md-3 control-label" for="email">Your E-mail</label>
              <div class="col-md-9">
                <input  type="file" name="file" />
                <br>
              </div>
            </div>
    
            <!-- Message body -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="message">Select Category</label>
              <div class="col-md-9">
             <label class="checkbox-inline"><input type="radio" name="catAccessories" value="charger"/>Charger</label>
                <label class="checkbox-inline"><input type="radio"  name="catAccessories" value="mobileCover">Mobile-Cover</label>
                 <label class="checkbox-inline"><input type="radio"  name="catAccessories" value="others">Other</label>
 
              </div>
            </div>
    
            <!-- Form actions -->
